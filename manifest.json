{
    "manifest_version" : 2,
    "name" : "Latest xkcd comic",
    "description":"Get the latest xkcd at your homepage",
    "version":"1.0",
    "permissions": [
        "https://dynamic.xkcd.com/"
    ],
    "content_security_policy": "script-src 'self' https://dynamic.xkcd.com; object-src 'self'",
    "browser_action": {
        "default_icon" :"icon.png",
        "default_popup" : "xkcd.htm"
    }
}
